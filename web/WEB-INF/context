//for JNDI add to Context in conf/context.xml and add JDBC DRIVER to lib directory in Application Server as direct
<Context>
    <Resource name="jdbc/erp"
              auth="Container"
              type="javax.sql.DataSource"
              username="amir"
              password="myjava123"
              driverClassName="oracle.jdbc.driver.OracleDriver"
              url="jdbc:oracle:thin:@localhost:1521/orclpdb1"
              maxActive="10"
              maxIdle="5"/>
</Context>